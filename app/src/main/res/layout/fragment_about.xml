<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="6dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/grey"
            app:cardCornerRadius="15dp">
            <com.jetradarmobile.snowfall.SnowfallView
                android:layout_width="match_parent"
                app:snowflakesAlreadyFalling="true"
                app:snowflakeImage="@drawable/baseline_radar_24"
                app:snowflakeSpeedMax="3"
                app:snowflakeSpeedMin="1"
                app:snowflakeSizeMin="20dp"

                app:snowflakesFadingEnabled="true"
                app:snowflakesNum="25"
                android:layout_height="200dp"/>
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                app:lottie_autoPlay="true"

                app:lottie_rawRes="@raw/usb_done"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="Info"
                android:layout_marginTop="35dp"
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:textSize="30dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="Version: 1.0"
                android:layout_marginTop="80dp"
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:autoLink="all"
                android:id="@+id/device_info"
                android:layout_marginBottom="20dp"
                android:text="Device info\nOS"
                android:layout_marginTop="100dp"
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:textSize="15dp"
                android:textStyle="bold" />
        </com.google.android.material.card.MaterialCardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="6dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/grey"
            app:cardCornerRadius="15dp"
            android:id="@+id/web">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/baseline_bolt_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:layout_gravity="center|left"
                    android:text="Official website"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="6dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/grey"
            app:cardCornerRadius="15dp"
            android:id="@+id/telegram">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/telegram"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:fontFamily="@font/lato"
                    android:text="Telegram channel and chat"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="6dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/grey"
            app:cardCornerRadius="15dp"
            android:id="@+id/github">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/github"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:layout_gravity="center|left"
                    android:text="Github page"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:fontFamily="@font/lato"
            android:textColor="@color/grey"
            android:text="Author: Zalexdev"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginBottom="65dp"
            android:gravity="center"
            android:fontFamily="@font/lato"
            android:text="Stryker Defence Inc. All rights reserved (c)"/>

 </LinearLayout>